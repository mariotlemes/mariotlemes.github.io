@article{milene2025,
abstract={O avanço das tecnologias digitais impacta diretamente a gestão pública e o atendimento à população. Muitos servidores municipais da área da saúde ainda enfrentam dificuldades no uso de ferramentas tecnológicas, o que pode comprometer a eficiência administrativa. Este curso propõe a implementação de uma capacitação digital para tais servidores, visando a modernização da gestão e a melhoria da qualidade dos serviços prestados ao cidadão. A transformação digital é uma realidade no setor público. A necessidade de cumprir legislações como a Lei Geral de Proteção de Dados (LGPD), a utilização de sistemas de gestão eletrônica de documentos e a integração com plataformas do Governo Federal (gov.br) exigem servidores capacitados. A falta de conhecimento em ferramentas digitais gera retrabalho, atrasos e dificuldades na execução de atividades rotineiras. Assim, o IFG Formosa ofertar uma formação continuada na área de tecnologia é fundamental para o fortalecimento da gestão municipal na cidade de Formosa e nas relações entre ambas instituições.},
abbr={Extensão},
author={Milene Galvão (coordenador) and Mario Lemes},
journal={Instituto Federal de Goiás - Campus Formosa},
title={Capacitação Digital para a Modernização da Gestão Municipal de Formosa na área da Saúde},
year={2025-2},
}

